<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_card_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/card_view_bg"
    app:cardElevation="@dimen/card_view_elevation"
    app:cardCornerRadius="@dimen/card_view_rad">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/card_view_img"
                android:layout_width="@dimen/cat_item_image_size"
                android:layout_height="@dimen/cat_item_image_size"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/cat_food_default_text"
                android:layout_below="@+id/card_view_img"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/count_foods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="10sp"
                android:background="@drawable/rounded_corner"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/number_of_foods_default"
                android:layout_alignEnd="@+id/card_view_img"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

</android.support.v7.widget.CardView>
